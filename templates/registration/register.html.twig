{% extends 'base.html.twig' %}

{% block title %}Création de compte{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('forms') }}
{% endblock %}

{% block body %}

    <main>

        <div class="form-wrapper offset-lg-3 col-lg-6 offset-md-1 col-md-10 d-flex flex-column">

            {% for flashError in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
            {% endfor %}

            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}

            <h1 class="d-flex justify-content-center">Création de compte :</h1>

            {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.email, {
                label : 'Adresse e-mail :'
            }) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Mot de passe :'
            }) }}
            {{ form_row(registrationForm.username, {
                label: 'Nom d\'utilisateur :'
            }) }}
            {{ form_row(registrationForm.firstName, {
                label: 'Prénom :'
            }) }}
            {{ form_row(registrationForm.lastName, {
                label: 'Nom de famille :'
            }) }}
            {{ form_row(registrationForm.file) }}
            <button type="submit" class="btn btn-lg btn-primary">Créer un compte</button>

            <a class="my-4" href="{{ path('app_login') }}">Vous avez déjà un compte ?</a>
            {{ form_end(registrationForm) }}

        </div>

    </main>




{% endblock %}
